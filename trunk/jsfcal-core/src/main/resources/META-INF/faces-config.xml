<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE faces-config PUBLIC
		"-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
		"http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>

	<lifecycle>
		<phase-listener>tr.richfacesext.pl.RichFacesExtResourceLoaderPhaseListener</phase-listener>		
		<phase-listener>tr.richfacesext.components.jsfcal.month.MonthViewActionPhaseListener</phase-listener>		
		<phase-listener>tr.richfacesext.components.jsfcal.month.MonthViewExportPhaseListener</phase-listener>		
	</lifecycle>
	
	<component>
		<component-type>tr.richfacesext.components.jsfcal.Month</component-type>
		<component-class>tr.richfacesext.components.jsfcal.month.MonthView</component-class>
	</component>
	
	<render-kit>
		<renderer>
			<component-family>tr.richfacesext.components.jsfcal</component-family>
			<renderer-type>tr.richfacesext.components.jsfcal.month.MonthViewRenderer</renderer-type>
			<renderer-class>tr.richfacesext.components.jsfcal.month.MonthViewRenderer</renderer-class>
		</renderer>
	</render-kit>

</faces-config>